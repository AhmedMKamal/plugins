{
  "manifest_version": 2,

  "name": "Reddit No Hands",
  "description": "Control reddit with your voice. Great for browsing reddit while you eat or do \"other\" things.",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Click to enable Reddit No Hands",
    "default_icon": "icon-off-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": ["rnh.css"],
      "js": ["jquery-3.2.1.min.js", "rnh.js"]
    },
    {
      "matches": [
        "http://www.reddit.com/*",
        "https://www.reddit.com/*"
      ],
      "js": ["frame_beacon.js"],
      "all_frames": true
    }
  ],
  "author": "Miko Borys",
  "permissions": [
    "activeTab",
  	"ttsEngine",
    "https://ajax.googleapis.com/"
  ]
}
