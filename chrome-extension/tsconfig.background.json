{
  "compilerOptions": {
    "declaration": false,
    "module": "amd",
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "outFile": "chrome-extension/dist/background-amd.js",
    "removeComments": true,
    "rootDir": "src/background",
    "sourceMap": false,
    "target": "ES2017"
  },
  "exclude": [
    "node_modules",
    "src/options.ts",
    "src/content-scripts",
    "src/plugins",
    "tests"
  ]
}
