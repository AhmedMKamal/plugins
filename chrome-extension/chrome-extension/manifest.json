{
  "manifest_version": 2,
  "name": "Lip Surf",
  "description": "Control the browser with your voice. Great for browsing while you eat or your hands are busy.",
  "version": "1.0.1",
  "key": "",
  "background": {
    "scripts": [
      "dist/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Click to enable voice control.",
    "default_icon": "assets/icon-off-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "match_about_blank": true,
      "run_at": "document_start",
      "css": ["assets/rnh.css"],
      "js": [
        "vendor/jquery-3.2.1.min.js",
        "dist/page/main.js"
      ]
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "vendor/jquery-3.2.1.min.js",
        "dist/page/frame-beacon.js"
      ],
      "all_frames": true
    },
    {
      "matches": [
        "http://www.redditmedia.com/*",
        "https://www.redditmedia.com/*"
      ],
      "js": ["js/reddit-media-frame-beacon.js"],
      "css": ["assets/iframe-styles.css"],
      "all_frames": true
    }
  ],
  "author": "Miko Borys",
  "options_page": "views/options.html",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "http://*/",
    "https://*/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "views/preview-cmd-box.html",
    "views/help-box.html"
  ]
}
