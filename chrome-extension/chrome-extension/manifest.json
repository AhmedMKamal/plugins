{
  "manifest_version": 2,
  "name": "LipSurf",
  "description": "Control the browser with your voice. Great for browsing while you eat or your hands are busy.",
  "version": "0.1.0",
  "background": {
    "scripts": [
      "dist/background.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "browser_action": {
    "default_title": "Click to enable voice control.",
    "default_icon": "assets/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "match_about_blank": true,
      "run_at": "document_start",
      "css": ["assets/rnh.css"],
      "js": [
        "vendor/jquery-3.2.1.min.js",
        "dist/page.js"
      ]
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "vendor/jquery-3.2.1.min.js",
        "dist/frame-beacon.js"
      ],
      "all_frames": true
    },
    {
      "matches": [
        "http://www.redditmedia.com/*",
        "https://www.redditmedia.com/*"
      ],
      "js": ["js/reddit-media-frame-beacon.js"],
      "css": ["assets/iframe-styles.css"],
      "all_frames": true
    }
  ],
  "author": "Miko Borys",
  "options_page": "views/options.html",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
	"*://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "views/live-text-overlay.html",
    "assets/barlow-latin.woff2",
    "assets/barlow-latin-ex.woff2",
    "assets/barlow-latin-200.woff2",
    "assets/barlow-latin-ex-200.woff2"
  ]
}
