{
  "compilerOptions": {
    "module": "none",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "moduleResolution": "node",
    "declaration": false,
    "outDir": "chrome-extension/dist/",
    "rootDir": "src",
    "sourceMap": false,
    "target": "ES2017"
  },
  "exclude": [
    "node_modules",
    "src/background",
    "src/common",
    "src/content-scripts",
    "tests"
  ]
}
