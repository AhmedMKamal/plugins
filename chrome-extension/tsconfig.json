{
  "compilerOptions": {
    "declaration": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "lodash": ["node_modules/lodash-es"]
    },
    "target": "ES2017"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "plugins",
    "node_modules"
  ]
}
