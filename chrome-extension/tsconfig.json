{
  "compilerOptions": {
    "declaration": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "lodash": ["node_modules/lodash-es"]
    },
    "target": "ES2017"
  },
  "exclude": [
    "plugins",
    "node_modules"
  ]
}
